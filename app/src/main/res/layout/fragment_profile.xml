<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:fitsSystemWindows="true"> <ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_launcher_foreground"
    android:background="@drawable/bg_rounded_input"
    android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Sinh Viên"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#003366"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvProfileID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã SV: ..."
        android:textSize="16sp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvDetailLop"
            android:text="Lớp: ..."
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvDetailNganh"
            android:text="Ngành: ..."
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvDetailEmail"
            android:text="Email: ..."
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_marginTop="30dp"
        android:backgroundTint="#D32F2F"/>

</LinearLayout>