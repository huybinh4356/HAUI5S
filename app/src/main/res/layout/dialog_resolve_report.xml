<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐÁNH GIÁ 5S &amp; XỬ LÝ"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#003366"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_input"
            android:backgroundTint="#F5F5F5"
            android:padding="10dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tvDialogInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="14sp"
                android:textColor="#333"/>
        </LinearLayout>

        <TextView
            android:text="Bảng chấm điểm 5S:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_input"
            android:padding="5dp"
            android:layout_marginBottom="15dp"
            android:stretchColumns="1">

            <TableRow android:gravity="center_vertical" android:paddingVertical="2dp">
                <TextView android:text="S1. Sàng lọc" android:textStyle="bold" android:textColor="#003366"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"/>
                <RatingBar android:id="@+id/rbS1" style="?android:attr/ratingBarStyleSmall" android:numStars="5" android:rating="5" android:stepSize="1"/>
            </TableRow>
            <View android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="2dp"/>

            <TableRow android:gravity="center_vertical" android:paddingVertical="2dp">
                <TextView android:text="S2. Sắp xếp" android:textStyle="bold" android:textColor="#003366"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"/>
                <RatingBar android:id="@+id/rbS2" style="?android:attr/ratingBarStyleSmall" android:numStars="5" android:rating="5" android:stepSize="1"/>
            </TableRow>
            <View android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="2dp"/>

            <TableRow android:gravity="center_vertical" android:paddingVertical="2dp">
                <TextView android:text="S3. Sạch sẽ" android:textStyle="bold" android:textColor="#003366"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"/>
                <RatingBar android:id="@+id/rbS3" style="?android:attr/ratingBarStyleSmall" android:numStars="5" android:rating="5" android:stepSize="1"/>
            </TableRow>
            <View android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="2dp"/>

            <TableRow android:gravity="center_vertical" android:paddingVertical="2dp">
                <TextView android:text="S4. Săn sóc" android:textStyle="bold" android:textColor="#003366"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"/>
                <RatingBar android:id="@+id/rbS4" style="?android:attr/ratingBarStyleSmall" android:numStars="5" android:rating="5" android:stepSize="1"/>
            </TableRow>
            <View android:layout_height="1dp" android:background="#EEE" android:layout_marginVertical="2dp"/>

            <TableRow android:gravity="center_vertical" android:paddingVertical="2dp">
                <TextView android:text="S5. Sẵn sàng" android:textStyle="bold" android:textColor="#003366"/>
                <Space android:layout_width="0dp" android:layout_height="wrap_content"/>
                <RatingBar android:id="@+id/rbS5" style="?android:attr/ratingBarStyleSmall" android:numStars="5" android:rating="5" android:stepSize="1"/>
            </TableRow>
        </TableLayout>

        <TextView android:text="Ghi chú xử lý:" android:textStyle="bold"/>
        <EditText
            android:id="@+id/etResolveNote"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="Nhập nội dung phản hồi..."
            android:gravity="top|start"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginBottom="15dp"/>

        <Button
            android:id="@+id/btnSubmitResolve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LƯU ĐÁNH GIÁ"
            android:backgroundTint="#4CAF50"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>