<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="THÊM PHIẾU MƯỢN CHI TIẾT"
            android:textColor="#003366"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin sinh viên:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/etStudentId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="Nhập Mã SV (Gợi ý tự động)"
            android:completionThreshold="1"
            android:padding="10dp" />

        <EditText
            android:id="@+id/etStudentName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="Tên Sinh Viên (Tự điền)"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số lượng dụng cụ cần mượn:"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Chổi quét nhà"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyChoi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Giẻ lau"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyGie"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Chậu nước"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyChau"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Chổi lau nhà"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyLauNha"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Hót rác"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyHotRac"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Thùng rác"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/etQtyThungRac"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dụng cụ khác (Nhập tên &amp; Số lượng):"
            android:layout_marginTop="10dp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/etOtherName"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="Tên dụng cụ khác"
                android:padding="5dp"
                android:layout_marginEnd="5dp"/>
            <EditText
                android:id="@+id/etQtyOther"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_input"
                android:hint="SL"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSaveBorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LƯU PHIẾU"
            android:backgroundTint="#00BFFF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>